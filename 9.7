#include <stdio.h>

void promedio(FILE *ar); /* Prototipo de funci칩n. Se pasa un archivo como par치metro. */

int main()
{
    FILE *ar;

    if ((ar = fopen("arc9.txt", "r")) != NULL)
    {
        promedio(ar); /* Se llama a la funci칩n promedio. Observe la forma como se pasa el archivo como par치metro. */
        fclose(ar);
    }
    else
    {
        printf("No se puede abrir el archivo.\n");
    }

    return 0;
}

void promedio(FILE *ar1)
{
    int i, j, n, mat;
    float pro, cal;

    fscanf(ar1, "%d", &n);

    for (i = 0; i < n; i++)
    {
        fscanf(ar1, "%d", &mat);
        printf("%d\t", mat);
        pro = 0;

        for (j = 0; j < 5; j++)
        {
            fscanf(ar1, "%f", &cal);
            pro += cal;
        }

        printf("\t%.2f\n", pro / 5);
    }
}
